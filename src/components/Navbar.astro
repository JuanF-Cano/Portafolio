<section class="nav">
    <div class="container">
        <h1>DevWeb</h1>
        <div class="options">
            <button onclick="scrollToSection('hero')">About me</button>
            <button onclick="scrollToSection('projects')">Projects</button>
        </div>
    </div>
</section>

<style>
    .nav {
        display: flex;
        align-items: center;
        justify-content: center;
        top: 0;
        width: 100vw;
        height: 4.3rem;
        position: sticky;
        z-index: 10;
        background-color: #2d575e;
        box-shadow: 0px 0.2px 10px rgb(17, 17, 17);
        font-size: 1.5rem;
    }
    .container {
        display: flex;
        align-items: center;
        justify-content: space-between;
        width: calc(100% - 5rem);
        height: calc(100% - 0.2rem);
        color: rgb(230, 230, 230);
    }
    button {
        background: none;
        border: none;
        padding: 10px 10px;
        font-size: 1.4rem;
        color: white;
        cursor: pointer;
        margin-left: 20px;
    }
    button:hover {
        background-color: #122326;
        border-radius: 4px;
    }
</style>

<script is:inline>
    function scrollToSection(section) {
        document.getElementById(section).scrollIntoView({ behavior: 'smooth' });
    }
  </script>