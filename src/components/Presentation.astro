        <h1> Hello! I'm<br><span id="text-container"></span></h1>
        <script>
            const name = "Juan Fernando Cano";
            const textContainer = document.getElementById('text-container');
            let index = 0;

            function typeWriter() {
            if (index < name.length) {
                textContainer.innerHTML += name.charAt(index);
                index++;
                setTimeout(typeWriter, 90); // Puedes ajustar el tiempo aquÃ­ (en milisegundos)
                }
            }window.onload = typeWriter;
        </script>
