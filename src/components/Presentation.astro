<style> 
    .presentation {
        background-color: #00008b51;
        display: flex;
        flex-direction: column;
        width: 100%;
        max-width: 1300px;
        border-radius: 20px;
        margin: 3vh 0;
        padding: 2rem 3rem;
    }
    .presentation:hover {
        background-color: rgba(0, 0, 133, 0.6);
        transform: scale(1.01);
    }
    .me {
        display: flex;
        justify-content: center;
    }
    .info {
        display: grid;
        grid-template-columns: 70% 1fr;
        gap: 0px 40px;
    }
	h1 {
		font-size: 2.2rem;
		font-weight: 560;
		line-height: 1.3;
		text-align: left;
        margin: 5rem 3rem;
	}
    #text-container {
        font-weight: 700;
        color: rgb(2, 184, 21);
    }
    h2 {
        font-size: 1.8rem;
        margin-top: -3px;
        margin-bottom: 5px;
        line-heigth: 1;
        color: rgb(2, 184, 21);
    }
    p {
	    font-size: 1.3rem; 
    }
    .photo-container {
        display: flex;
        justify-content: center;
        align-items: center;
    }
    .profile-photo {
        width: 250px;
        height: 250px;
        border-radius: 50%;
        object-fit: cover;
    }
    .icons {
        background-color: rgba(143, 143, 143, 0.7);
        display: flex;
        flex-wrap: wrap;
        align-items: center;
        justify-content: center;
        padding: 1.4rem 0rem;
        border-radius: 10px;
    }
    .icons > span {
        margin: 0px 0.4rem;
    }
    .contact > span {
        margin: 0px 1rem;
    }
    .icons > span :hover,
    .contact > span :hover {
        transform: scale(1.1);
    }
    img {
        width: 50px;
        object-fit: cover;
    }
    .contact {
        background-color: rgba(143, 143, 143, 0.7);
        display: flex;
        flex-wrap: wrap;
        align-items: center;
        justify-content: center;
        padding: 1rem;
        border-radius: 10px;
    }
</style>
