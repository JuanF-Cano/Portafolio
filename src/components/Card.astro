---
interface Props {
    image: string;
    title: string;
    tecnologies: string[];
    codeLink: string;
    deployLink: string;
}

const { image, title, tecnologies, codeLink, deployLink } = Astro.props;
---

<div class="card">
    <div class="preview">
        <img src={image} alt={title} />
    </div>
    <h2>{title}</h2>
    <div class="tecnology-container">
        {tecnologies.map((tec) => (
            <img src={tec} alt="tecnology-image"/>
        ))}
    </div>
    <div class="links">
        <span class="link-container">
            Code 
            <a href={codeLink} target="_blank">
                <img src="/github.png" alt="GitHub" />
            </a>
        </span>
        <span class="link-container">
            Deploy 
            <a href={deployLink} target="_blank">
                <img src="/favicon.svg" alt="Deploy" />
            </a>
        </span>
    </div>
</div>

<style>
    .card {
        background-color: rgb(92, 92, 92);
        display: flex;
        flex-direction: column;
        align-items: center;
        width: 300px;
        height: 430px;
        margin: 10px;
        padding: 0 20px 20px 20px;
        border-radius: 10px;
        color: white;
    }
    .card:hover {
        background-color: rgb(100, 100, 100);
        transform: scale(1.05);
    }
    h2 {
        font-weight: 500;
        margin-bottom: 20px;
        text-align: center;
    }
    .preview {
        width: 100%;
        height: 180px;
        border-radius: 12px;
        text-align: center;
        display: flex;
        justify-content: center;
        align-items: center;
        margin-top: 25px;
        margin-bottom: -15px;
        overflow: hidden;
    }
    .preview > img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        border-radius: 12px;
    }
    .tecnology-container {
        display: flex;
        gap: 10px;
        justify-content: center;
        align-items: center;
        margin-bottom: 20px;
    }
    .tecnology-container > img {
        width: auto;
        height: 40px;
        object-fit: cover;
    }
    .links {
        display: flex;
        gap: 20px;
        justify-content: space-between;
        align-items: center;
        margin-top: auto;
        text-align: center;
        color: black;
        font-weight: bold;
        line-height: 12px;
    }
    .link-container {
        display: flex;
        justify-content: center;
        align-items: center;
    }
    .link-container img {
        width: 35px;
        height: 35px;
        margin-left: 10px;
    }
</style>
