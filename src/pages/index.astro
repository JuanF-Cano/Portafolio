---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
import Hero from '../components/Hero.astro';

const newsProject = [
	"/react.png", 
	"/redux.png",
	"/tailwind-css.png",
	"/vite.svg",
];

const tmdbProject = [
	"/react.png",
	"/express.png",
	"/css-3.png",
	"/vite.svg",
];

const memoramaProject = [
	"/html-5.png",
	"/css-3.png",
];

const vueJobsProject = [
	"/vuejs.png", 
	"/tailwind-css.png",
	"axios.png",
	"/vite.svg",
];
---

<Layout title="Juan Fernando Cano FullStack Developer">
	<main>
		<Hero />
		<h1>Projects</h1>
		<div class="projects-container" id="projects">
			<Card 
				image="/newsProject.png"
				title="Bootcamp News"
				technologies={newsProject}
				codeLink="https://github.com/Gurottesque/News-App"
				deployLink="https://bootcamp-news.netlify.app/"
			/>
			<Card 
				image="/memoramaProject.png"
				title="Memorama Game"
				technologies={memoramaProject}
				codeLink="https://github.com/JuanF-Cano/memorama-game"
				deployLink=""
			/>
				<Card 
				image="/tmdbProject.png"
				title="Cinema App"
				technologies={tmdbProject}
				codeLink="https://github.com/JuanF-Cano/cinema-app"
				deployLink="https://frabjous-pastelito-9e6b9f.netlify.app/"
			/>
			<!-- <Card 
				image=""
				title="Nexo Social Media"
				technologies={socialMediaProject}
				codeLink="https://github.com/FullStack-Elite-Bootcamp-IV/social-media-API"
				deployLink=""
			/> -->
			<Card 
				image="/vueProject.png"
				title="Vue Jobs Project"
				technologies={vueJobsProject}
				codeLink="https://github.com/JuanF-Cano/vue-project"
				deployLink="https://vue-jobs-project-juanfc.netlify.app/"
			/>
		</div>
	</main>
</Layout>

<style>
	main {
		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: center;
		color: #fff;
		font-size: 23px;
		line-height: 1.7;
	}
	main > h1 {
		margin-bottom: 3rem;
	}
	.projects-container {
		display: flex;
		justify-content: center;
		width: 100%;
		height: calc(100vh - 15rem);
	}
</style>
